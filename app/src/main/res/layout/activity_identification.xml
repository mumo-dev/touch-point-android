<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context=".IdentificationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_salesagent_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name of Sale Agent:"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_salesagent_zone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Zone:"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_salesagent_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Telephone:"
                android:inputType="phone" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_pos_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name of the Point of Sales:"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_pos_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address of the Point of sales:"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_owner_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="NAME and first name (s) of the Owner:"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_owner_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Owner's Phone Number:"
                android:inputType="phone" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_businesspermit_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Business Permit number"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_kra_pin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Kenya Revenue Authority Pin "
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_supervisor_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name and Surname of Supervisor:"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_supervisor_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Telephone number of Supervisor"
                android:inputType="phone" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_number_cni_supervisor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Number CNI Supervisor "
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_cashier1_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name and Surname of Cashier 1: "
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_cashier1_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Cashier 1 Telephone Number:  "
                android:inputType="phone" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_cni_cashier1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="CNI Cashier Number 1 "
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_cashier2_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name and Surname of Cashier 2: "
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_cashier2_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Cashier 2 Telephone Number:  "
                android:inputType="phone" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_cni_cashier2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="CNI Cashier Number 2 "
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_cashier3_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name and Surname of Cashier 3: "
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/background_light"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Device Informations"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ed_device_imei"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="IMEI"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ed_device_serial_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Serial Number"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:layout_marginBottom="10dp"-->
        <!--android:background="@android:color/background_dark" />-->

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_surface_room"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Surface of the room:"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_products_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Type of products sold:"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_core_business"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Core business:"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_secondary_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Secondary Activity (s): "
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_employees_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Number of employees:"
                android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Waiting Room:"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <RadioGroup
            android:id="@+id/rg_waiting_room"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="YES" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NO" />
        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Computer equipment available on site"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <RadioGroup
            android:id="@+id/rg_computer_available"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="YES" />

            <RadioButton
                android:id="@+id/rb_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NO" />
        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="InTouch Products / Services you want to market:"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/cb_bill_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment of bills" />


        <CheckBox
            android:id="@+id/cb_mobile_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile Money" />

        <CheckBox
            android:id="@+id/cb_airtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Airtime" />

        <CheckBox
            android:id="@+id/cb_money_transfer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Money Transfer" />

        <CheckBox
            android:id="@+id/cb_insurance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Insurance" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Touch Pad Payment"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_payment_phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone Number:"
                android:inputType="phone" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_payment_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Amount:"
                android:inputType="numberDecimal" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_payment_goods_refno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Buy Goods Reference Number:"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <!--photo here-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_view"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"

                    />

                <Button
                    android:id="@+id/open_camera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="upload photo 1" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_view2"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    />

                <Button
                    android:id="@+id/open_camera2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="upload photo 2" />
            </LinearLayout>

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Typology of the point (tick the corresponding box)"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <RadioGroup
            android:id="@+id/rg_topology_of_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/topoOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Neighborhood shop" />

            <RadioButton
                android:id="@+id/topoTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Multi-service point (cyber café, printing, scan, photo ID)" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bar / Restaurant" />

            <RadioButton
                android:id="@+id/topoThree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Patisserie / Fast Food / Glacier" />

            <RadioButton
                android:id="@+id/topofoiur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pharmacy/Chemist" />

            <RadioButton
                android:id="@+id/topofive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Others" />
        </RadioGroup>


        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="submit"
            android:textColor="@color/white" />


    </LinearLayout>

</ScrollView>